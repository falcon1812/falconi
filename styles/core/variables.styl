/* Small Devices, Tablets */
$mediaM  = "only screen and (min-width : 768px)"
/* Medium Devices, Desktops */
$mediaL  = "only screen and (min-width : 992px)"
/* Large Devices, Wide Screens */
$mediaXL = "only screen and (min-width : 1200px)"
